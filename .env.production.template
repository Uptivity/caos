# CAOS CRM Production Environment Variables
# Copy this file to .env.production and update with your production values

# Application
NODE_ENV=production
PORT=3001
APP_URL=https://your-domain.com
API_URL=https://your-domain.com/api

# Database Configuration (MySQL 8.0)
DB_HOST=mysql
DB_PORT=3306
DB_NAME=caos_crm
DB_USER=caos_user
DB_PASSWORD=your-secure-database-password-here
DB_ROOT_PASSWORD=your-mysql-root-password-here
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_CHARSET=utf8mb4

# Redis Configuration (for sessions and caching)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-minimum-32-characters
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# Security Configuration
CORS_ORIGIN=https://your-domain.com
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
SESSION_SECRET=your-session-secret-key-change-this-minimum-32-characters

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=true

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=CAOS CRM <noreply@your-domain.com>

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/csv

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/caos-crm.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Monitoring and Health
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
PERFORMANCE_MONITORING=true

# Mobile/PWA Configuration
PWA_ENABLED=true
PUSH_NOTIFICATION_ENABLED=true
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_EMAIL=mailto:admin@your-domain.com

# External Integrations
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
MICROSOFT_CLIENT_ID=your-microsoft-oauth-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-oauth-client-secret

# Analytics and Tracking
ANALYTICS_ENABLED=true
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# SSL/TLS Configuration (if handling certificates in app)
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# Development flags (should be false in production)
DEBUG_MODE=false
MOCK_DATA=false
DISABLE_AUTH=false