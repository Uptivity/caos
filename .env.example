# CAOS CRM Environment Configuration
# Copy this file to .env and update with your production values

# Application
NODE_ENV=production
PORT=3001

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_NAME=caos_crm
DB_USER=caos_user
DB_PASSWORD=changeme123  # CHANGE IN PRODUCTION
DB_ROOT_PASSWORD=rootpass123  # CHANGE IN PRODUCTION

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production  # CHANGE IN PRODUCTION
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production  # CHANGE IN PRODUCTION

# Redis Configuration
REDIS_PASSWORD=redispass123  # CHANGE IN PRODUCTION

# CORS Configuration
CORS_ORIGIN=http://localhost:3000  # Update with your domain

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX=100  # Max requests per window

# Digital Ocean Specific (if using App Platform)
# DATABASE_URL=postgresql://user:pass@host:port/dbname
# REDIS_URL=redis://default:password@host:port